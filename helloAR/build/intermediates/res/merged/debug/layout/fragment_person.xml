<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e5e5">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="@dimen/activity_status_trans_padding_top"
        android:background="@drawable/actionbar_bg">


        <TextView
            android:id="@+id/tvCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:text="我的"
            android:textColor="#f4cb27"
            android:textSize="@dimen/font_max"
            android:textStyle="normal" />


    </FrameLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/action_bar_top"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/person_bg"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/header"/>
        <ImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@drawable/line_v"/>
        <TextView
            android:id="@+id/iv_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:layout_alignRight="@+id/line"
            android:layout_alignBottom="@+id/line"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:text="注册"/>
        <TextView
            android:id="@+id/iv_denglu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_alignLeft="@+id/line"
            android:layout_alignBottom="@+id/line"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:text="登录"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/iv_header"
            android:textColor="#ffffff"
            android:textSize="17sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_photo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/setting_photo"/>
        <TextView
            android:id="@+id/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_image"
            android:layout_toRightOf="@+id/h1"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:text="相册"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#898383"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_setting_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/l1"
            android:layout_width="@dimen/other_iv_height"
            android:layout_height="@dimen/other_iv_height"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/setteing"/>
        <TextView
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_image"
            android:layout_toRightOf="@+id/l1"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:text="设置"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/other_arrow_height"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting_about"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="6dp"
        android:paddingRight="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="visible">
        <ImageView
            android:id="@+id/d1"
            android:layout_width="@dimen/other_iv_height"
            android:layout_height="@dimen/other_iv_height"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/about"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_image"
            android:layout_toRightOf="@+id/d1"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_large"
            android:textColor="#000000"
            android:text="关于我们"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/other_arrow_height"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:paddingLeft="16dp"
        android:src="#898383"/>
    <RelativeLayout
        android:id="@+id/rl_setting_help"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="6dp"
        android:paddingRight="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/n1"
            android:layout_width="@dimen/other_iv_height"
            android:layout_height="@dimen/other_iv_height"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/help"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_image"
            android:layout_toRightOf="@+id/n1"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_large"
            android:textColor="#000000"
            android:text="用户指南"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/other_arrow_height"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#898383"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:visibility="gone"/>
</LinearLayout>